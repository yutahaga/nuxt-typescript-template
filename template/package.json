{
  "name": "{{ name }}",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "yarn eslint && yarn stylelint",
    "lint:fix": "yarn eslint --fix && yarn stylelint --fix",
    "eslint": "vue-cli-service lint",
    "stylelint": "stylelint **/*.{css,scss,vue}"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.1",
    "nuxt-edge": "^2.0.0-25562603.52780d3",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "vuex-class": "^0.3.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.7",
    "@vue/babel-preset-app": "^3.0.0-rc.12",
    "@vue/cli-plugin-babel": "^3.0.0-rc.12",
    "@vue/cli-plugin-e2e-cypress": "^3.0.0-rc.12",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.12",
    "@vue/cli-plugin-typescript": "^3.0.0-rc.12",
    "@vue/cli-plugin-unit-jest": "^3.0.0-rc.12",
    "@vue/cli-service": "^3.0.0-rc.12",
    "@vue/eslint-config-airbnb": "^3.0.0-rc.12",
    "@vue/eslint-config-prettier": "^3.0.0-rc.12",
    "@vue/eslint-config-typescript": "^3.0.0-rc.12",
    "@vue/test-utils": "^1.0.0-beta.24",
    "@yutahaga/stylelint-config-scss": "^0.1.0",
    "babel-core": "7.0.0-bridge.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.2",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^1.3.3",
    "stylelint": "^9.4.0",
    "stylelint-scss": "^3.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "stylelint **/*.vue",
      "git add"
    ],
    "*.css": [
      "stylelint **/*.css",
      "git add"
    ],
    "*.scss": [
      "stylelint **/*.scss",
      "git add"
    ]
  }
}
